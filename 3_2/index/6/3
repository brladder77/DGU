#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main() {

	char c;
	int charCount = 0;
	int charCount2 = 0;
	int lineCount = 0;
	char line[1024];
	char* ofp;
	
	FILE* ifp = fopen("c:\\pr3.txt", "r");
	if (ifp == NULL) {
		puts("파일 열기 실패");
		return 0;
	}
	while (1) {
		c = fgetc(ifp);
		if (feof(ifp)) {
			break;
		}
		printf("%c", c);
		if (c >= '!' && c <= 'z'||c=='\'') {
			charCount++;
			charCount2++;
		}
		else if (c == '\n') lineCount++;
		else {
			charCount2++;
		}
	}

	fclose(ifp);
	puts("\n");
	printf("문자 수(공백 제외) : %d\n문자 수(공백 포함) : %d\n줄 수 : %d\n", charCount, charCount2, lineCount);


	return 0;
}
